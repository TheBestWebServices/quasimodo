{
  "manifest_version": 3,
  "name" : "__MSG_ext_name__",
  "description": "__MSG_ext_description__",
  "default_locale" : "en",
  "version": "1.0.0",
  "permissions": [
    "notifications",
    "offscreen",
    "storage"
  ],
  "action": {
    "default_title": "__MSG_ext_name__",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  }
}
